html
  head
    = yield :title
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags
  |  <body class="
  = controller.controller_name
  | ">

  =render "partials/navbar"
  .container

    #columns
      #side
        - if @cart
          |  <div id="cart" 
          - if @cart.line_items.empty?
             |  style="display: none" 
          |  > 

          = render @cart

    .display_cart
        .sho
          button.sho[type="button"]
            | Show 
        .hid
          button.hid[type="button"]
            | Hide 
           
  .content
